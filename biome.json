{
    "files": {
        "includes": ["package.json", "src/**/*"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto",
        "bracketSameLine": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "useNamingConvention": {
                    "level": "error",
                    "options": {
                        "conventions": [
                            {
                                "selector": {
                                    "kind": "const"
                                },
                                "formats": ["CONSTANT_CASE"]
                            },
                            {
                                "selector": {
                                    "kind": "enumMember"
                                },
                                "formats": ["CONSTANT_CASE"]
                            },
                            {
                                "selector": {
                                    "kind": "let"
                                },
                                "formats": ["camelCase"]
                            }
                        ]
                    }
                },
                "useImportType": "off",
                "useConst": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "attributePosition": "auto",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "arrowParentheses": "asNeeded",
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "overrides": [
        {
            "includes": ["src/**/*.{js,ts,tsx}"],
            "formatter": {
                "indentWidth": 4
            }
        }
    ]
}
